{% extends 'OroUIBundle:actions:update.html.twig' %}
{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}

{% form_theme form with ['OroFormBundle:Form:fields.html.twig'] %}

{% set entityId = entity.id %}
{% oro_title_set({params : { "%hub.name%": entity.name } }) %}

{% set formAction = entityId ? path('atol_hub_update', { 'id': entityId}) : path('atol_hub_create') %}

{% block navButtons %}
    {% if entityId and is_granted('DELETE', form.vars.value) %}
        {{ UI.deleteButton({
            'dataUrl': path('oro_action_operation_execute', {'operationName': 'DELETE', 'entityId': entity.id, 'entityClass': entityClass}),
            'dataRedirect': path('atol_hub_index'),
            'aCss': 'no-hash remove-button',
            'dataId': entityId,
            'id': 'btn-remove-hub',
            'entity_label': 'amaxlab.oro.atolhub.hub.entity_label'|trans
        }) }}
        {{ UI.buttonSeparator() }}
    {% endif %}
    {{ UI.cancelButton(path('atol_hub_index')) }}
    {% set html = UI.saveAndCloseButton({
        'route': 'web_studio_hub_index'
    }) %}
    {% if is_granted('web_studio_hub_create') %}
        {% set html = html ~ UI.saveAndNewButton({
            'route': 'web_studio_hub_create'
        }) %}
    {% endif %}
    {% if entity.id or is_granted('web_studio_hub_update') %}
        {% set html = html ~ UI.saveAndStayButton({
            'route': 'web_studio_hub_update',
            'params': {'id': '$id'}
        }) %}
    {% endif %}
    {{ UI.dropdownSaveButton({'html': html}) }}
{% endblock navButtons %}

{% block pageHeader %}
    {% if entityId %}
        {% set breadcrumbs = {
            'entity':      form.vars.value,
            'indexPath':   path('atol_hub_index'),
            'indexLabel': 'amaxlab.oro.atolhub.hub.entity_plural_label'|trans,
            'entityTitle': entity.name
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'amaxlab.oro.atolhub.hub.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'doman-profile' %}
    {% set dataBlocks = [{
        'title': 'General'|trans,
        'class': 'active',
        'subblocks': [{
            'title': '',
            'data': [
                form_row(form.hubRegistrar),
                form_row(form.name),
                form_row(form.expiredAt),
                form_row(form.hubMailService),
            ]
        }]
    }] %}

    {% set additionalData = [] %}
    {% for child in form.children if child.vars.extra_field is defined and child.vars.extra_field %}
        {% set additionalData = additionalData|merge([form_row(child)]) %}
    {% endfor %}
    {% if additionalData is not empty %}
        {% set dataBlocks = dataBlocks|merge([{
            'title': 'Additional'|trans,
            'subblocks': [{
                'title': '',
                'useSpan': false,
                'data' : additionalData
            }]
        }] ) %}
    {% endif %}

    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks
    } %}

    {{ parent() }}
{% endblock content_data %}
